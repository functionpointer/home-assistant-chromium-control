[Unit]
Description=MQTT Chromium Control
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/pi/git/mqtt-chromium-control
ExecStart=/home/pi/git/mqtt-chromium-control/venv/bin/python -m mqtt_chromium_control --chromium http://127.0.0.123:8123/dashboard-kiosk/0
Restart=always
RestartSec=30
StartLimitInterval=200
StartLimitBurst=4
User=pi

[Install]
WantedBy=multi-user.target
